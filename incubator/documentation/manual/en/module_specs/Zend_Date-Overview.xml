                    </row>
                    <row>
                        <entry><link linkend="zend.date.time.second">Second</link></entry>
                        <entry><link linkend="zend.date.time.second.get">getSecond()</link></entry>
                        <entry><link linkend="zend.date.time.second.set">setSecond()</link></entry>
