                        <entry><link linkend="zend.date.time.hour.get">getHour()</link></entry>
                        <entry><link linkend="zend.date.time.hour.set">setHour()</link></entry>
                        <entry><link linkend="zend.date.time.hour.add">addHour()</link></entry>
                        <entry><link linkend="zend.date.time.hour.sub">subHour()</link></entry>
